@model HankoSpa.Models.Cita

@{
    ViewData["Title"] = "Agendar Cita";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mt-4 mb-3">📌 Agendar una nueva cita</h2>

<form asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="FechaCita" class="form-label">Fecha de la cita</label>
        <input asp-for="FechaCita" class="form-control" type="date" />
        <span asp-validation-for="FechaCita" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="HoraCita" class="form-label">Hora de la cita</label>
        <input asp-for="HoraCita" class="form-control" type="time" />
        <span asp-validation-for="HoraCita" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="EstadoCita" class="form-label">Estado</label>
        <select asp-for="EstadoCita" class="form-select">
            <option value="Pendiente">Pendiente</option>
            <option value="Confirmada">Confirmada</option>
            <option value="Cancelada">Cancelada</option>
        </select>
        <span asp-validation-for="EstadoCita" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Cancelar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
