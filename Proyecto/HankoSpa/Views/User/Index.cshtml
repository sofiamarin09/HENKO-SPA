@model IEnumerable<HankoSpa.DTOs.UserDTO>

@{
    ViewData["Title"] = "Usuarios";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var usuariosOrdenados = Model.OrderBy(u => u.LastName).ThenBy(u => u.FirstName).ToList();
}

<div class="mt-4">
    <h2 class="text-primary">ğŸ‘¥ Lista de Usuarios</h2>
    <hr />

    @* Mensaje de Ã©xito *@
    @if (TempData["MensajeExito"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["MensajeExito"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @* Mensaje de error *@
    @if (TempData["MensajeError"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["MensajeError"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <p>
        <a class="btn btn-success" asp-controller="User" asp-action="Create">â• Crear nuevo usuario</a>
    </p>

    <table class="table table-bordered table-striped shadow-sm">
        <thead class="bg-white text-dark">
            <tr>
                <th>#</th>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Documento</th>
                <th>TelÃ©fono</th>
                <th>Email</th>
                <th class="text-center">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @if (!usuariosOrdenados.Any())
            {
                <tr>
                    <td colspan="7" class="text-center">No hay usuarios registrados.</td>
                </tr>
            }
            else
            {
                var i = 1;
                foreach (var user in usuariosOrdenados)
                {
                    <tr>
                        <td>@i</td>
                        <td>@user.FirstName</td>
                        <td>@user.LastName</td>
                        <td>@user.Document</td>
                        <td>@user.PhoneNumber</td>
                        <td>@user.Email</td>
                        <td class="text-center">
                            <a class="btn btn-outline-warning btn-sm me-1" asp-controller="Usuario" asp-action="Edit"
                                asp-route-id="@user.Id">âœï¸ Editar</a>
                            <a class="btn btn-outline-danger btn-sm" asp-controller="Usuario" asp-action="Delete"
                                asp-route-id="@user.Id">ğŸ—‘ï¸ Eliminar</a>
                        </td>
                    </tr>
                    i++;
                }
            }
        </tbody>
    </table>
</div>
