@model HankoSpa.DTOs.RolPermissionDTO
@{
    ViewData["Title"] = "Eliminar Permiso del Rol";
    var nombreRol = ViewBag.NombreRol as string ?? "Rol";
    var nombrePermiso = ViewBag.NombrePermiso as string ?? "Permiso";
}
<h2>Eliminar Permiso del Rol</h2>
<div class="alert alert-warning">
    ¿Está seguro que desea eliminar el permiso <strong>@nombrePermiso</strong> del rol <strong>@nombreRol</strong>?
</div>
<form asp-action="Remove" method="post">
    <input type="hidden" asp-for="CustomRolId" />
    <input type="hidden" asp-for="PermissionId" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" asp-route-rolId="@Model.CustomRolId" class="btn btn-secondary">Cancelar</a>
</form>

