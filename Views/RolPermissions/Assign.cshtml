@model HankoSpa.DTOs.RolPermissionDTO
@{
    ViewData["Title"] = "Asignar Permiso a Rol";
    var rolId = Model.CustomRolId;
    var nombreRol = ViewBag.NombreRol as string ?? "Rol";
    var permissions = ViewBag.Permissions as IEnumerable<SelectListItem> ?? new List<SelectListItem>();
}
<h2>Asignar Permiso a: @nombreRol</h2>
<form asp-action="Assign" method="post">
    <input type="hidden" asp-for="CustomRolId" />
    <div class="form-group">
        <label for="PermissionId">Permiso</label>
        <select asp-for="PermissionId" asp-items="permissions" class="form-control"></select>
    </div>
    <button type="submit" class="btn btn-success">Asignar</button>
    <a asp-action="Index" asp-route-rolId="@rolId" class="btn btn-secondary">Volver</a>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

