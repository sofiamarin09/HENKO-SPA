@model HankoSpa.DTOs.PermissionDTO
@{
    ViewData["Title"] = "Eliminar Permiso";
}

<h2 class="text-danger mb-3">🗑️ Eliminar Permiso</h2>

<h5>¿Estás seguro de que deseas eliminar el siguiente permiso?</h5>

<div class="card shadow-sm mt-3 mb-3">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-4">Nombre del Permiso:</dt>
            <dd class="col-sm-8">@Model.NombrePermiso</dd>
            <dt class="col-sm-4">Módulo:</dt>
            <dd class="col-sm-8">@Model.Module</dd>
        </dl>
    </div>
</div>

<form asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="PermisoId" />
    <button type="submit" class="btn btn-danger">Sí, eliminar</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Cancelar</a>
</form>
