﻿@{
    ViewData["Title"] = "Inicio";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using HankoSpa.Models
@inject HankoSpa.Services.Interfaces.IUserService _usersService

@{
    User? user;
    try
    {
        user = await _usersService.GetUserAsync(User.Identity.Name);
    }
    catch (Exception)
    {
        user = null;
    }
}

<style>
    html, body {
        margin: 0;
        padding: 0;
        height: 100%;
        width: 100%;
        overflow-x: hidden;
    }

    body {
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .hero-section {
        width: 100%;
        height: 100vh;
        background-image: url('/img/fondo2.jpg'); /* Asegúrate que la imagen esté en wwwroot/img/ */
        background-size: cover; /* Estira la imagen para cubrir el área */
        background-position: center;
        background-repeat: no-repeat;
        position: relative;
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
        color: white;
        filter: contrast(1.1) saturate(1.2); /* Aumenta color y nitidez */
    }

    .hero-overlay {
        position: absolute;
        top: 0;
        left: 0;
        height: 100%;
        width: 100%;
        background-color: rgba(0, 0, 0, 0.15); /* Muy leve oscurecimiento */
    }

    .hero-content {
        position: relative;
        z-index: 2;
        padding: 1rem;
        display: flex; /* Cambiado a flex */
        flex-direction: column; /* Asegura que los elementos se apilen en columna */
        justify-content: center; /* Centra los elementos verticalmente */
        align-items: center; /* Centra los elementos horizontalmente */
        gap: 1rem; /* Añade espacio entre el título y el párrafo */
    }

        .hero-content h1 {
            font-size: 3.5rem;
            font-weight: bold;
            text-shadow: 1px 1px 4px black;
        }

        .hero-content p {
            font-size: 1.5rem;
            text-shadow: 1px 1px 4px black;
        }
</style>

<div class="hero-section">
    <div class="hero-overlay"></div>
    <div class="hero-content">
        @if (user is not null)
        {
            <h3 class="display-4">Bienvenido/a @user.FullName.ToString()</h3>
            <p class="lead">Tu bienestar es nuestra prioridad</p>
        }
        else
        {
            <h3 class="display-4">Bienvenido Hanko Spa</h3>
            <p class="lead">Tu bienestar es nuestra prioridad</p>
        }

    </div>

    <!-- Aquí se eliminó la sección con los botones -->
</div>