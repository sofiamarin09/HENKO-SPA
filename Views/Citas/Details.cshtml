@model HankoSpa.DTOs.CitaDTO

@{
    ViewData["Title"] = "Detalle de la Cita";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var customRolId = User.FindFirst("CustomRolId")?.Value;
}

<h2 class="mt-4 mb-3">📋 Detalle de la Cita</h2>

@if (customRolId == "1" || customRolId == "2" || customRolId == "3" || customRolId == "4" || customRolId == "5")
{
    <div class="card shadow-sm">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-4">Fecha de la Cita:</dt>
                <dd class="col-sm-8">@Model.FechaCita.ToShortDateString()</dd>

                <dt class="col-sm-4">Hora de la Cita:</dt>
                <dd class="col-sm-8">@Model.HoraCita.ToString(@"hh\:mm")</dd>

                <dt class="col-sm-4">Estado:</dt>
                <dd class="col-sm-8">@Model.EstadoCita</dd>

                <dt class="col-sm-4">Documento del Usuario:</dt>
                <dd class="col-sm-8">@ViewBag.DocumentoUsuario</dd>
            </dl>

            <a asp-action="Index" class="btn btn-secondary mt-3">Volver</a>
        </div>
    </div>
}
else
{
    <div class="alert alert-danger mt-4">
        No tienes permisos para ver el detalle de esta cita.
    </div>
}
